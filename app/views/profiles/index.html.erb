<h1>Listing profiles</h1>

<table class="display">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>UserID</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        <% @profiles.each do |profile| %>
          <tr id="<%= profile.id %>">
              <td><%= profile.first_name %></td>
              <td><%= profile.last_name %></td>
              <td><%= profile.email %></td>
              <td><%= profile.userid %></td>
              <td><%= link_to 'Edit', edit_profile_path(profile) %>
                  <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />

