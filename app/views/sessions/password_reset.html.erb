<%= form_tag password_reset_path, :method => :post do %>
  <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], :class => "form-control" %>
  </div>
  <div class="actions">
      <%= submit_tag "Reset Password" %>
  </div>
<% end %>
