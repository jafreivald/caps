<h1>Listing roles</h1>

<table class="display">
    <thead>
        <tr>
            <th>Role</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        <% @roles.each do |role| %>
          <tr>
              <td><%= role.role %></td>
              <td><%= link_to 'Edit', edit_role_path(role) %>
                  <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />

<%= link_to 'New Role', new_role_path %>
