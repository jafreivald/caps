<h1>Listing fields</h1>

<table>
  <tr>
    <th>Field type</th>
    <th>Field text</th>
    <th>Resource</th>
    <th>Modify</th>
  </tr>

<% @fields.each do |field| %>
  <tr>
    <td><%= field.field_type %></td>
    <td><%= field.field_text %></td>
    <td><%= field.resource %></td>
    <td><%= link_to 'Edit', edit_field_path(field) %>
    <%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

