<h1>Listing actions</h1>

<table class="display">
    <thead>
        <tr>
            <th>Action</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        <% @actions.each do |action| %>
          <tr>
              <td><%= action.action %></td>
              <td><%= link_to 'Edit', edit_action_path(action) %>
              <%= link_to 'Destroy', action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />

