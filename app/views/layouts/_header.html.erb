<html>
<head>
  <title>CAPS</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <h1>CAPS</h1>
<% if current_profile %>
  Logged in as <%= current_profile.first_name + " " + current_profile.last_name %>
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Log In", login_path %> or 
  <%= link_to "Create New Account", signup_path %>
<% end %>